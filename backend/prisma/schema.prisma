generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              Int              @id @default(autoincrement())
  name            String?
  username        String           @unique
  password        String
  blogs           Blog[]
  followers       Follow[]         @relation("UserFollowers")
  following       Follow[]         @relation("UserFollowing")
  mutedBy         Mute[]           @relation("UserMutedBy")
  mutedUsers      Mute[]           @relation("UserMutes")
  recommendations Recommendation[]
  notifications   Notification[]   @relation("UserNotifications")
}

model Blog {
  id                  Int              @id @default(autoincrement())
  authorId            Int
  content             String
  title               String
  published           Boolean          @default(false)
  createdAt           DateTime         @default(now())
  recommendationCount Int              @default(0)
  author              User             @relation(fields: [authorId], references: [id])
  recommendations     Recommendation[]
}

model Recommendation {
  id        Int      @id @default(autoincrement())
  userId    Int
  blogId    Int
  action    String
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
  blog Blog @relation(fields: [blogId], references: [id])

  @@unique([userId, blogId])
}

model Follow {
  id          Int      @id @default(autoincrement())
  followerId  Int
  followingId Int
  createdAt   DateTime @default(now())

  follower  User @relation("UserFollowing", fields: [followerId], references: [id])
  following User @relation("UserFollowers", fields: [followingId], references: [id])

  @@unique([followerId, followingId])
}

model Mute {
  id          Int      @id @default(autoincrement())
  userId      Int
  mutedUserId Int
  createdAt   DateTime @default(now())

  user      User @relation("UserMutes", fields: [userId], references: [id])
  mutedUser User @relation("UserMutedBy", fields: [mutedUserId], references: [id])

  @@unique([userId, mutedUserId])
}

model Notification {
  id         Int      @id @default(autoincrement())
  type       String
  message    String
  receiverId Int
  isRead     Boolean  @default(false)
  createdAt  DateTime @default(now())
  receiver   User     @relation("UserNotifications", fields: [receiverId], references: [id])
}
